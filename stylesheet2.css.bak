.button {
  background-color: rgba(200, 255, 200, 0.4);
  text-decoration: none;
  display: block;
  width: 40%;
  font-size: 15px;
  cursor: pointer;
  position: absolute;
}

  .moveRemove {
    animation-name: textOut;
    animation-duration: 1.2s; //sets the time of animation
    animation-timing-function: ease;
    animation-iteration-count: 1;
    animation-delay: 0s;
    animation-play-state: normal;
    animation-direction: normal;
    animation-fill-mode: forwards;
  }
  .moveAdd {
    animation-name: textIn;
    animation-duration: 1.2s; //sets the time of animation
    animation-timing-function: ease;
    animation-iteration-count: 1;
    animation-delay: 0s;
    animation-play-state: normal;
    animation-direction: normal;
    animation-fill-mode: forwards;
  }
  @keyframes textOut {
    0% {
      opacity: 1;
      margin-left: 20px;
    }
    100% {
      opacity: 0;
      margin-left: 500px;
    }
  }
  @keyframes textIn {
    0% {
      opacity: 0;
      margin-left: 500px;
    }
    100% {
      opacity: 1;
      margin-left: 20px;
    }
  }
}